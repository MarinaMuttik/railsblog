%table
  %tr
    %td
      Commenter:
    %td{:colspan => 2}
      = comment.commenter
  %tr
    %td
      Comment:
    %td{:colspan => 2}
      = comment.body
  %tr
    %td{:colspan => 3}
      = link_to 'Edit', edit_post_comment_path(post, comment)
  %tr
    %td{:colspan => 3}
      = link_to 'Delete', [comment.post, comment],
                method: :delete,
                data: { confirm: 'Are you sure you wish to delete this comment?'}
%p
