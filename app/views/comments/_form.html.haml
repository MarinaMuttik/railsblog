= form_for([ post, post.comments.build ], :local => true) do |form|
  %table
    %tr
      %td
        %label{ :for => 'text_field' }> Commenter
      %td
        = form.text_field :commenter
    %tr
      %td
        %label{ :for => 'text_area' }> Body
      %td
        = form.text_area :body

  = form.submit
