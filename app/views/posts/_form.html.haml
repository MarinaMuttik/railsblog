%section
  = form_for post, :local => true do |form|
    - if post.errors.any?
      #error-explanation
        %h2
          = pluralize(post.errors.count, "error")
          prohibited
          this post from being saved:
        %ul
          - post.errors.full_messages.each do |msg|
            %li= msg
    %table
      %tr
        %td
          %label{ :for => "text_field" }> Title
        %td
          = form.text_field :title
      %tr
        %td
          %label{ :for => "text_area" }> Body
        %td
          = form.text_area :body

    = form.submit
